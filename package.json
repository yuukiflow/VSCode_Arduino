{
  "name": "arduino-cursor",
  "displayName": "Arduino Cursor",
  "description": "A Cursor extension that provides Arduino IDE-like functionality directly in your editor",
  "version": "1.0.6",
  "publisher": "arduino-cursor",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/arduino-cursor.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "arduino",
    "embedded",
    "microcontroller",
    "development"
  ],
  "activationEvents": [
    "onLanguage:arduino",
    "onLanguage:cpp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "arduino-cursor.upload",
        "title": "Upload to Arduino",
        "category": "Arduino"
      },
      {
        "command": "arduino-cursor.check",
        "title": "Check/Compile Arduino Code",
        "category": "Arduino"
      },
      {
        "command": "arduino-cursor.monitor",
        "title": "Open Serial Monitor",
        "category": "Arduino"
      },
      {
        "command": "arduino-cursor.status",
        "title": "Show Arduino Status",
        "category": "Arduino"
      },
      {
        "command": "arduino-cursor.selectBoard",
        "title": "Select Arduino Board",
        "category": "Arduino"
      },
      {
        "command": "arduino-cursor.selectPort",
        "title": "Select Arduino Port",
        "category": "Arduino"
      },
      {
        "command": "arduino-cursor.gui",
        "title": "Arduino GUI (Board & Port Selection)",
        "category": "Arduino"
      },
      {
        "command": "arduino-cursor.libraryManager",
        "title": "Library Manager",
        "category": "Arduino"
      },
      {
        "command": "arduino-cursor.listBoards",
        "title": "List Available Boards",
        "category": "Arduino"
      },
      {
        "command": "arduino-cursor.setBaudrate",
        "title": "Set Serial Monitor Baudrate",
        "category": "Arduino"
      },
      {
        "command": "arduino-cursor.refreshLibraryCache",
        "title": "Refresh Library Cache",
        "category": "Arduino"
      },
      {
        "command": "arduino-cursor.refreshBoardsCache",
        "title": "Refresh Boards Cache",
        "category": "Arduino"
      }
    ],
    "languages": [
      {
        "id": "arduino",
        "aliases": ["Arduino", "arduino"],
        "extensions": [".ino"],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "Arduino Cursor",
      "properties": {
        "arduino-cursor.defaultBoard": {
          "type": "string",
          "default": "arduino:avr:uno",
          "description": "Default Arduino board FQBN"
        },
        "arduino-cursor.defaultPort": {
          "type": "string",
          "default": "/dev/ttyACM0",
          "description": "Default Arduino port"
        },
        "arduino-cursor.defaultBaudrate": {
          "type": "number",
          "default": 115200,
          "description": "Default serial monitor baudrate"
        },
        "arduino-cursor.arduinoCliPath": {
          "type": "string",
          "default": "arduino-cli",
          "description": "Path to arduino-cli executable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --out ./Releases/",
    "build": "npm run compile && npm run package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4",
    "@vscode/vsce": "^3.6.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
